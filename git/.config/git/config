[include]
	path = ~/.config/git/x-identity.conf
	path = ~/.config/git/_urls.conf

[advice]
	detachedHead = false

[commit]
	gpgSign = false

[core]
	editor = vim

[diff]
	tool = vimdiff

[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f

[init]
	defaultBranch = main

[merge]
	conflictstyle = diff3

[mergetool]
	vimdiff3 = --edit

[pull]
	ff = only

[rebase]
	updateRefs = true

[tar "zst"]
	command = zstdmt -z

[user]
	useConfigOnly = true

[alias]
	stash-untracked = !sh -c 'git stash --keep-index && git stash --keep-index --include-untracked && git stash pop stash@{1}'
