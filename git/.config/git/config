[include]
	path = ~/.config/git/x-identity.conf

[commit]
	gpgSign = false

[core]
	editor = vim

[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f

[init]
	defaultBranch = main

[pull]
	ff = only

[user]
	useConfigOnly = true

[mergetool]
	vimdiff3 = --edit

[advice]
	detachedHead = false

[tar "zst"]
	command = zstdmt -z
