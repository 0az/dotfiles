# vim: set ft=sh:

# Abbreviations
alias l='ls -CFG'
alias lx='exa --git-ignore'
alias py=python
alias py38=python3.8
alias py39=python3.9
alias ipy=ipython
alias doctest='python -m doctest'
alias ungron='gron --ungron'
alias icat='kitty +kitten icat'

# Mini-functions
alias add-ssh-keys="ssh-add -t 6000 ~/.ssh/keys/autoload/*"
alias fixup='git commit -m "fixup!"'
alias rebase='git rebase -i'
alias open-mpv='mpv --video-unscaled=yes --idle=once --force-window=yes'

# Configuration
alias bat="bat --pager=less"
alias black='black -l 80 -S'
alias exa='exa --group-directories-first'
alias irssi='irssi --home="$XDG_CONFIG_HOME/irssi"'
alias ffprobe='ffprobe -hide_banner'
alias ncdu='ncdu --exclude /System --exclude /Library'
# ptpython is blocked on appdirs
alias ptpython='ptpython --config-file=$XDG_CONFIG_HOME/ptpython/config.py'
alias ptipython='ptipython --config-file=$XDG_CONFIG_HOME/ptpython/config.py'
alias ptpy=ptpython
alias ptipy=ptipython
alias wget="wget --hsts-file=\$XDG_CACHE_HOME/wget-hsts"

# Editors
alias e='$EDITOR'
alias gd=mvimdiff
alias ge=mvim
alias vi=vim
alias code=code-insiders
alias vsc=code-insiders
